
<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        
        <th>Book Name</th>
        <th>Author Name</th>
        <th>Description</th>
        <th>E-mail</th>
        <th>Twitter</th>
        
      </tr>
    </thead>

    <tbody>

  <% @books.each do |book| %>

  <% if book.user == current_user %>
  <tr>
    
    

    <td>
      <%= link_to book.book_name, book_path(book) %>

    </td>
    <td><%= book.author_name %>
    </td>
    <td><%= book.description %>
    </td>
    <td><%= book.email %>
    </td>
    <td><%= book.twitter %>
    </td>
    
   
   
    
  
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

      


<%= link_to "New book", new_book_path, class: "btn btn-secondary" %>



<% else %>

<h1>Hello world!</h1>
This is my first rails page


<% end %>